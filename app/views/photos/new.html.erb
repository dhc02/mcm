<div id="content">
  <h3>New Photo</h3>
  
  <% form_for :photo, @photo, :url => photos_path, :html => { :multipart => true } do |f| %>
    <p>
      <%= f.error_messages %>
      <%= f.file_field :photo %>
    </p>
    <p>
      <%= f.label :caption %><br />
      <%= f.text_field :caption, :size => 100, :style => "width: 35em;" %>
    </p>
    <p>
      <%= f.label "What Page shoud this go on?" %><br />
      <%= collection_select( :photo, :page_id, Page.find(:all), :id, :title ) %>
    </p>
  
    <p>
      <%= f.submit "Create" %>
    </p>
  <% end %>
  <br />
  <p>
    <%= render :partial => 'layouts/adminlinks' %>
    
  </p>
</div>
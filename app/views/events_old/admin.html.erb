<h3>Manage Future and Past Events</h3>

<p>
  <% for event in @events %>
    <p>
      <b><%=h event.start_date.strftime("%m/%d") %> - <%=h event.end_date.strftime("%m/%d") %></b> ::
      <%=h event.start_time.strftime("%I:%M%p")%> - <%=h event.end_time.strftime("%I:%M%p")%> ::
      <span class="style1"><%= link_to event.title, event %></span><br /> 
      <%= link_to 'show', event %> | 
      <%= link_to 'edit', edit_event_path(event) %> | 
      <%= link_to 'delete', event, :confirm => "Are you sure you want to delete #{event.title}?", :method => 'delete' %>
    </p>
  <% end %>
</p>
<br />
<p>
  <%= link_to 'Create New Event', new_event_path %> | 
  <%= link_to 'Manage Calendar', :controller => 'events', :action => 'admin' %> |
  <%= link_to 'Manage Pages', pages_path %> | 
  <%= link_to 'Manage Photos', photos_path %>
</p>
<br />
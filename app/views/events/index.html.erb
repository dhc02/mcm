<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Type</th>
    <th>Teaser</th>
    <th>Body</th>
    <th>Public</th>
    <th>Created by</th>
    <th>Updated by</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Start time</th>
    <th>End time</th>
  </tr>

<% for event in @events %>
  <tr>
    <td><%=h event.title %></td>
    <td><%=h event.event_type %></td>
    <td><%= event.teaser %></td>
    <td><%= event.body %></td>
    <td><%=h event.public %></td>
    <td><%=h event.created_by %></td>
    <td><%=h event.updated_by %></td>
    <td><%=h event.start_date %></td>
    <td><%=h event.end_date %></td>
    <td><%=h event.start_time.strftime("%I:%M%p") %></td>
    <td><%=h event.end_time.strftime("%I:%M%p") %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


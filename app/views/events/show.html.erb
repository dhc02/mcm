<h2 style="display:inline; font-size:20px;"><%=h @event.start_date.strftime("%m/%d/%y") %> - <%=h @event.end_date.strftime("%m/%d/%y") %> ::</h2>
<span class="style1"><%=h @event.start_time.strftime("%I:%M%p")%> - <%=h @event.end_time.strftime("%I:%M%p")%></span>

<%= @event.body %>

<p>
  <%= link_to 'Edit this Event', edit_event_path(@event) %> |
  <%= link_to 'Delete this Event', @event, :confirm => "Are you sure you want to delete #{@event.title}?", :method => 'delete' %> |
  <%= link_to 'Manage all Events', events_path %> |
  <%= link_to 'Manage Pages', pages_path %>
</p>